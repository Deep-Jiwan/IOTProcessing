{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "LambdaDynamoToS3",
            "Effect": "Allow",
            "Action": [
                "dynamodb:BatchGetItem",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:Scan",
                "dynamodb:Query"
            ],
            "Resource": "arn:aws:dynamodb:ap-south-1:xyxyxy:table/IOTData"
        },
        {
            "Sid": "LambdaS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::iotdatas3backup/*"
        },
        {
            "Sid": "LambdaS3List",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::iotdatas3backup"
        }
    ]
}